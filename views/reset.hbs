{{#if error}}
    <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
      {{error}}
    </div>
{{/if}}
<form method="POST" style="max-width: 300px; margin: auto; margin-top: 50px; border: 0.5px solid gray; padding: 30px 30px 30px 30px">
    <h3>Reset Your Password</h3>
    <div class="form-group">
        <label>Enter Your Email</label>
        <input type="text" name="reset_email" class="form-control">
    </div>
    <div class="form-group">
        <button class="btn btn-success">Enter</button>
    </div>
</form>