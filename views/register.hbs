<link rel="stylesheet" type="text/css" href="stylesheets/loginregister.css"/>

{{#if error}}
    <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
      {{error}}
    </div>
{{/if}}

<div class="container"> 
    <div class="row">
    <center>
    <h1 class="join">Join ClassroomMarket</h1>
    </center>
        <div class="col-md-12 box">
         <form method = "POST">
         <h3>Register Here</h3>
         <div class="form-group">
            <label>Name</label>
            <input type="text" name="username" value="{{data.username}}" class="form-control" required="true">
         </div>

        <div class="form-group">
         <label>Profession</label>
         <select class="form-control" required="true" name="profession">
            <option>Student</option>
            <option>Professor</option>
         </select>
         </div>

         <div class="form-group">
            <label>Email Address</label>
            <input type="email" name="email" value="{{data.email}}" class="form-control" required="true">
         </div>


         <div class="form-group">
            <label>Password</label>
            <input type="password" name="password" class="form-control" required="true">
         </div>

         <div class="form-group">
            <label>Verify Password</label>
            <input type="password" name="passwordRepeat" class="form-control" required="true">
         </div>

        <div class="form-group">
            <p>
            <button class="customBtn redBtn">Register</button>
            <a href="/login"><button class="greenBtn customBtn">Go To Login</button></a>
         </p>
            </div>
         </form>
        </div>

    </div>
</div>



