<link rel="stylesheet" type="text/css" href="stylesheets/loginregister.css"/>

{{#if error}}
	<div class="alert alert-danger" role="alert">
		<span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true">
		</span>
		<span class="sr-only">Error:</span>
		{{error}}
	</div>
{{/if}}

<div class="container">
	<div class="row">
	<center>
		<h2 class="join">Check Your Email for a Verification Code</h2>
	</center>
		<div class="col-md-12 box">
			<form method="POST">
			<h3>Enter Your Verification Code</h3>
				<div class="form-group">
					<label>Code:</label>
					<input type="text" name="code" class="form-control" required="true">
				</div>

				<div class="form-group">
				<button class="customBtn redBtn">Submit</button>
				</div>
			</form>
		</div>
	</div>
</div>