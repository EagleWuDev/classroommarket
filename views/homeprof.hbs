<link rel="stylesheet" type="text/css" href="stylesheets/home.css"/>

{{#if error}}
    <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
      {{error}}
    </div>
{{/if}}

<div class="header">
	<div class="container">
		<div class="col-md-12">
			<h1>Welcome Professor {{name}}</h1>
			<h3>You Have {{activeNum}} Active Classes</h3>
			<a href="/logout"><h5>Logout</h5></a>
		</div>
	</div>
</div>

<div class="main">
	<div class="container">
		<div class="left-side">
		<h5 class="margin">Active Classes</h5>
		<center>
		<h3 class="active-class">{{activeNum}}</h3>
		</center>

		</div>
		<div class="right-side">
		<h5 class="margin">Class History</h5>
		{{#if classRoom}}
		{{#each classRoom}}
		<center>
			<a href="/classRoom/{{_id}}">
			<div class="classBox">
			<center>
				<h3>{{name}}</h3>
				<h4>{{college}}</h4>
			</center>
			</div>
			</a>
		</center>
		{{/each}}
		<center>
		<button type="button" style="margin-top: 3vh;" data-toggle="modal" data-target="#myModal" class="createClass">Create a Class</button>
		</center>
		{{else}}
		<center>
			<h5 class="noClass">You Have No Classes</h5>
			<button type="button" data-toggle="modal" data-target="#myModal" class="createClass">Create a Class</button>
		</center>
		{{/if}}
			<!-- Modal -->
			<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
			  <div class="modal-dialog" role="document">
			    <div class="modal-content">
			      <div class="modal-header">
			        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			        <h4 class="modal-title" id="myModalLabel">Create A Class</h4>
			      </div>
			      <div class="modal-body">
			       <form method="post">
			       <div class="form-group">
			       <label>Class Name</label>
			       <input type="text" class="form-control" name="className" required="true">
			       </div>
			       <div class="form-group">
			       <label>College Name</label>
			       <input type="text" name="collegeName" class="form-control" required="true">
			       </div>
			      </div>
			      <div class="modal-footer">
			        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
			        <button type="submit" class="btn btn-primary">Create Class</button>
			      </div>
			      </form>
			    </div>
			  </div>
			</div>
		</div>
	</div>
</div>

