{{#if error}}
    <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
      {{error}}
    </div>
{{/if}}

<form method="POST" style="max-width: 300px; margin: auto; margin-top: 50px; border: 0.5px solid gray; padding: 30px 30px 30px 30px">
    <h3>Reset Your Password</h3>
    <div class="form-group">
        <label>Enter A New Password</label>
        <input type="text" name="password" class="form-control">
    </div>
    <div class="form-group">
        <label>Confirm New Password</label>
        <input type="text" name="passwordRepeat" class="form-control">
    </div>
    <div class="form-group">
        <button class="btn btn-success">Enter</button>
        <h4>If you password has been successfully reset, you will automatically be brought to the login page.</h4>
    </div>
</form>