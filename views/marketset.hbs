 <div id="page-content-wrapper">

{{#if error}}
    <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
      {{error}}
    </div>
{{/if}}

<div class="main">
    <a href="#menu-toggle" class="menu" id="menu-toggle"><span class="glyphicon glyphicon-align-left" aria-hidden="true"></span></a>
  <div class="container">

    <div class="container">

     <h1 class="secondTitle" id="class" classId = "{{classId}}">Market Settings</h1>

     <div class="col-md-6" style="border-right: 1px solid black">
     <h3>Name:</h3>
     <h4>{{name}}</h4>

     <h3>College:</h3>
     <h4>{{college}}</h4>
     <button class="gronksAdd margin-top" style="float: right" data-toggle="modal" data-target="#editModal">Edit Market</button>
     </div>

     <!-- Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Market</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form method="post">
          <div class="form-group">
            <label>Edit Name</label>
            <input type="text" name="name" value="{{name}}" class="form-control" />
          </div>
          <div class="form-group`">
            <label>Edit College</label>
            <input type="text" name="college" value="{{college}}" class="form-control" />
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
      </div>
       </form>
    </div>
  </div>
</div>





     <div class="col-md-6">
     <h3>Owner:</h3>
     <h4>{{professor}}</h4>

     </div>

     <div class="clear"></div>

     <div class="col-md-12">
     <div class="red-box">
     <h3>WARNING: DANGER ZONE</h3>
      <a href="/delete_class/{{classId}}"><button class="warning" style="border: 3px solid #ffff00 !important" ><h4 style="color: #ffff00">DELETE {{name}}</h4></button></a>
      </div>
     </div>
    </div>
  

</div>
</div>

