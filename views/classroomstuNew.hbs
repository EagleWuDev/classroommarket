<link rel="stylesheet" type="text/css" href="/stylesheets/home.css"/>
<link rel="stylesheet" type="text/css" href="/stylesheets/class.css">

<div id="wrapper" class="toggled">
   <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <h5 class="sidebar-title">
                      {{name}}
                  </h5>
                </li>
                <li>
                    <a href="/home"><h3>Home</h3></a>
                </li>
                 <li>
                    <h3>Assignments</h3>
                </li>
                <li>
                   <a href="/logout"><h3>Logout</h3></a>
                </li>
            </ul>
        </div>


 <div id="page-content-wrapper">

{{#if error}}
    <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
      {{error}}
    </div>
{{/if}}


<div class="main">
   <a href="#menu-toggle" class="menu" id="menu-toggle"><span class="glyphicon glyphicon-align-left" aria-hidden="true"></span></a>
	<div class="container">
		<div class="col-md-12">

    <h1 class="secondTitle">{{name}} Information</h1>

    <div class="col-md-4 descBox">
    <center>
      <h4 class="title1">College</h4>
      <h6 class="descr1">{{college}}</h6>
    </center>
    </div>

    <div class="col-md-4 descBox">
    <center>
      <h4 class="title1">Professor</h4>
      <h6 class="descr1">{{professor}}</h6>
    </center>
    </div>

    <div class="col-md-4 descBox">
    <center>
      <h4 class="title1">Created On</h4>
      <h6 class="descr1"><span class="dateNice">{{createdAt}}</span></h6>
    </center>
    </div>


    <div class="clear"></div>

    <center>
      <a href="/join/{{id}}"><button class = "joinClass">Join This Class</button></a>
    </center>


    <h1 class="secondTitle">Assignments</h1>
    {{#if assignments}}


    <div class="panel-group" id="accordian">

    {{#each assignments}}


    <center>
      <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" data-parent="#accordian" href="#collapse{{assignment._id}}">{{assignment.name}}</a>
          </h4>
      </div>

      <div id="collapse{{assignment._id}}" class="panel-collapse collapse">
      <div class="panel-body">
        <h3>{{assignment.name}}</h3>
         <h4>Due Date: {{assignment.expireAt}}</h4>
         <h5>Weight: {{assignment.weight}}</h5>
         {{#if assignment.active}}
          <h6 class="active">Active</h6>
             <div>
            
   
      </div>
         {{else}}
          <h6>Not Active</h6>
          <a href="/assignments/{{assignment._id}}"><h6>Price</h6></a>

         {{/if}}
      </div>
      </div>  
      </div>
      </center>
    {{/each}}

    </div>

 
    {{else}}
		<center>
		<h2>There are No Assignments</h2>
		</center>

    {{/if}}
		</div>
	</div>
</div>
</div>



